<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.jk.lzy.dao.GoodDao">
    <select id="findGoodCount" resultType="Integer">
        SELECT count(1) FROM goods
    </select>
    <select id="queryGood" resultType="com.jk.lzy.model.GoodBean">
        SELECT * FROM goods LIMIT #{start},#{rows}
    </select>
    <delete id="deleteGood">
        DELETE FROM goods WHERE id = #{id}
    </delete>
    <insert id="insertGood">
        insert into goods (goodname,goodprice,goodtype,goodtime,status)values(#{goodname},#{goodprice},#{goodtype},#{goodtime},#{status})
    </insert>
</mapper>